{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["@cloudflare/workers-types"],
    "lib": ["ES2020", "WebWorker"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "config/routes.json"],
  "exclude": ["node_modules"]
}
